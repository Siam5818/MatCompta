<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="comptabilitePU" transaction-type="RESOURCE_LOCAL">

        <!--  Entités déclarées -->
        <class>sn.groupeisi.matcompta.entities.Affectation</class>
        <class>sn.groupeisi.matcompta.entities.Utilisateur</class>
        <class>sn.groupeisi.matcompta.entities.Materiel</class>
        <class>sn.groupeisi.matcompta.entities.Categorie</class>
        <class>sn.groupeisi.matcompta.entities.InventaireComptable</class>



        <properties>
            <!-- Configuration et Connexion PostgreSQL -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/compta_db" />
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="Passer@24" />

            <!-- Hibernate Dialect: Utilisation correcte de PostgreSQLDialect. -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />

            <!-- Affichage des requêtes SQL -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
